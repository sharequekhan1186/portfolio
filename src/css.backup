 :root {
    --text: #111827;
    --accent: #2563eb;
    --border: #e5e7eb;
}

.nav {
    /* display: flex;
    justify-content: space-around; */
    padding: 20px;
    border-bottom: 1px solid var(--border);
}

/* General Reset for Nav */
.nav {
  width: 100%;
  background-color: #1e1e2f; /* Dark background */
  padding: 20px 0;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Container inside nav */
.nav-container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Logo */
.logo {
  font-size: 1.8rem;
  font-weight: bold;
  color: #ffffff;
  cursor: pointer;
  letter-spacing: 2px;
}

/* Nav Links */
.nav-links a {
  color: #ffffff;
  text-decoration: none;
  margin-left: 25px;
  font-size: 1rem;
  transition: color 0.3s, transform 0.3s;
}

/* Hover Effect */
.nav-links a:hover {
  color: #ff6b6b; /* Highlight color */
  transform: scale(1.05);
}

/* Responsive */
@media (max-width: 768px) {
  .nav-container {
    flex-direction: column;
  }
  .nav-links {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .nav-links a {
    margin: 8px 0;
    padding-top: 20px;
  }
}


.container {
    max-width: 720px;
    margin: auto;
    padding: 32px 20px;
}

section {
    margin-bottom: 40px;
}

.card {
    border: 1px solid var(--border);
    padding: 16px;
    margin-bottom: 16px;
    border-radius: 6px;
}

.btn {
    display: inline-block;
    padding: 10px 16px;
    font-size: 14px;
    border-radius: 6px;
    border: 1px solid var(--border);
    text-decoration: none;
    margin-right: 10px;
}

.btn-primary {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
}

.btn-outline {
    color: var(--text);
}

.footer {
    text-align: center;
    padding: 20px;
    border-top: 1px solid var(--border);
    font-size: 14px;
}

/* MEDIA QUERIES */
@media (max-width: 480px) {
    .btn {
        display: block;
        width: 100%;
        text-align: center;
        margin-bottom: 10px;
    }
}

main {
