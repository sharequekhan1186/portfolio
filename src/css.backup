App.css


/* Layout */
.container {
  max-width: 900px;
  margin: auto;
  padding: 60px 20px;
}

/* Header */
.header h1 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #38bdf8;
}

.header p {
  margin-top: 8px;
  color: #cbd5f5;
}

/* Sections */
section {
  margin-top: 50px;
}

section h2 {
  font-size: 1.6rem;
  margin-bottom: 15px;
  color: #f8fafc;
}

/* Buttons */
.btn-group {
  margin-top: 20px;
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.btn {
  padding: 10px 18px;
  border-radius: 8px;
  border: 1px solid #38bdf8;
  background: transparent;
  color: #38bdf8;
  transition: all 0.3s ease;
}

.btn:hover {
  background: #38bdf8;
  color: #0f172a;
}

/* Skills */
.skills {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.skill {
  padding: 6px 12px;
  background: #1e293b;
  border-radius: 6px;
  font-size: 0.9rem;
}

/* Project Card */
.project {
  background: #1e293b;
  padding: 20px;
  border-radius: 12px;
  margin-top: 15px;
  transition: transform 0.3s ease;
}

.project:hover {
  transform: translateY(-5px);
}

.project a {
  color: #38bdf8;
  font-weight: 500;
}

/* Responsive */
@media (max-width: 768px) {
  .header h1 {
    font-size: 2rem;
  }
}